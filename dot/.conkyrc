out_to_x no
own_window no
out_to_console yes
double_buffer no

background no
cpu_avg_samples 2
net_avg_samples 2
no_buffers yes
out_to_stderr no
update_interval 0.5
total_run_times 0
short_units yes
uppercase no
use_spacer left

TEXT
♪ ${mpd_smart} ${mpd_bar 4} ${mpd_status} ♪ \
RAM: ${membar 4} | \
CPU: ${cpubar 4} | \
${time %a %d.%m.%y} ${time %H:%M}
